---
import { 
  Github,
  TailwindCSS, 
  AWS, 
  Nextjs, 
  Nodejs, 
  MySQL, 
  Cpp, 
  TypeScript, 
  Qt, 
  Figma,
JavaScript, Firefox, Chromium
} from '../Tools/Icons';

interface Props {
  imgsource?: string;
  Type: string;
  Name: string;
  Tools: string[];
  Description: string;
  PrevLink?: string;
  GitLink?: string;
  FigmaLink?: string;
}

const { imgsource, Name, Tools, Description, PrevLink, GitLink, Type, FigmaLink } = Astro.props;
---

<div class="h-full group relative bg-transparent hover:bg-[#0a0a0a] rounded-2xl overflow-hidden border border-white/10 hover:border-[#51E4B8]/50 transition-all duration-500 hover:shadow-[0_0_30px_-10px_rgba(81,228,184,0.3)] flex flex-col">
  
  <!-- Hover Glow Effect -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#51E4B8]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

  <!-- Image Section -->
  {imgsource && (
    <div class="relative overflow-hidden aspect-video">
      <img 
        src={imgsource} 
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" 
        alt={`${Name} preview`} 
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-transparent to-transparent opacity-80"></div>
    </div>
  )}
  
  <!-- Content Section -->
  <div class="flex flex-col gap-4 p-6 flex-1 relative z-10">
    <!-- Header -->
    <div class="flex flex-col gap-2">
      <div class="flex justify-between items-start gap-2">
        <h1 class="text-xl text-white font-bold tracking-tight group-hover:text-[#51E4B8] transition-colors duration-300">
          {Name}
        </h1>
        {GitLink && (
          <a href={GitLink} target="_blank" class="text-gray-400 hover:text-white transition-colors">
            <Github size="1.2em" />
          </a>
        )}
      </div>
      <span class="text-xs font-medium text-[#51E4B8] bg-[#51E4B8]/10 px-2 py-1 rounded-md w-fit border border-[#51E4B8]/20">
        {Type}
      </span>
    </div>

    <!-- Description -->
    <div class="flex-grow">
      <p class="text-sm text-gray-400 leading-relaxed line-clamp-3 group-hover:text-gray-300 transition-colors duration-300">
        {Description}
      </p>
    </div>

    <!-- Tools/Technologies -->
    <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-white/5">
      {Tools.map((Tool) => (
        <div class="text-gray-400 hover:text-[#51E4B8] transition-colors duration-300" title={Tool}>
            {Tool === 'MySQL' && <MySQL size='1.2em'/>}
            {Tool === 'C' && <Cpp size='1.2em'/>}
            {Tool === 'Cpp' && <Cpp size='1.2em'/>}
            {Tool === 'TailWind' && <TailwindCSS size='1.2em'/>}
            {Tool === 'NextJs' && <Nextjs size='1.2em'/>}
            {Tool === 'Node' && <Nodejs size='1.2em'/>}
            {Tool === 'AWS' && <AWS size='1.2em'/>}
            {Tool === 'Typescript' && <TypeScript size='1.2em'/>}
            {Tool === 'Qt' && <Qt size='1.2em'/>}
            {Tool === 'Javascript' && <JavaScript size='1.2em'/>}
            {Tool === 'Firefox' && <Firefox size='1.2em'/>}
            {Tool === 'Chromium' && <Chromium size='1.2em'/>}
        </div>
      ))}
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-3 mt-2">
      {PrevLink && (
        <a 
          href={PrevLink}
          target="_blank"
          rel="noopener noreferrer"
          class="w-full flex items-center justify-center gap-2 py-2.5 px-4 rounded-xl bg-white/5 hover:bg-[#51E4B8] text-white hover:text-[#0a0a0a] font-medium transition-all duration-300 group/btn"
        >
          <span>View Project</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      )}
      
      {FigmaLink && (
        <a 
          href={FigmaLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center p-2.5 rounded-xl bg-white/5 hover:bg-[#51E4B8] text-white hover:text-[#0a0a0a] transition-all duration-300"
          title="View Design"
        >
          <Figma size="1.2em" />
        </a>
      )}
    </div>
  </div>
</div>
