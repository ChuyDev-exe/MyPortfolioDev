---
import { 
  Github,
  TailwindCSS, 
  AWS, 
  Nextjs, 
  AstroI, 
  Nodejs, 
  MySQL, 
  Cpp, 
  TypeScript, 
  Linux, 
  RaspberryPI, 
  Qt, 
  VisualStudioCode, 
  Docker, 
  Android, 
  Microsoft,
  LVGL,
  Figma
} from '../Tools/Icons';

interface Props {
  imgsource?: string;
  Type: string;
  Name: string;
  Tools: string[];
  Description: string;
  PrevLink?: string;
  GitLink: string;
  FigmaLink?: string;
}

const { imgsource, Name, Tools, Description, PrevLink, GitLink, Type, FigmaLink } = Astro.props;
---

<div class="h-full group bg-gradient-to-br from-gray-800/90 to-gray-900/90 backdrop-blur-sm rounded-2xl overflow-hidden border border-gray-700/50 hover:border-gray-600/50 transition-all duration-300 hover:transform hover:scale-[1.02] shadow-lg hover:shadow-2xl flex flex-col">
  <!-- Image Section -->
  {imgsource && (
    <div class="relative overflow-hidden aspect-video sm:aspect-[16/10] lg:aspect-video">
      <img 
        src={imgsource} 
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" 
        alt={`${Name} preview`} 
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
  )}
  
  <!-- Content Section -->
  <div class="flex flex-col gap-2 sm:gap-3 p-3 sm:p-4 lg:p-5 flex-1">
    <!-- Header -->
    <div class="flex flex-col gap-1">
      <h1 class="text-base sm:text-lg lg:text-xl text-[#51E4B8] font-bold uppercase tracking-wide line-clamp-2">
        {Name}
      </h1>
      <h2 class="text-xs sm:text-sm text-gray-300 font-medium">
        {Type}
      </h2>
    </div>

    <!-- Tools/Technologies -->
    <div class="flex flex-wrap gap-1.5 sm:gap-2">
      {Tools.map((Tool) => (
        <div class="flex items-center justify-center p-1 sm:p-1.5 rounded-md bg-gray-700/50 hover:bg-gray-600/50 transition-colors duration-200 group/tool">
          <span class="text-slate-100 transition-transform duration-200 group-hover/tool:scale-110 w-3 h-3 sm:w-4 sm:h-4 lg:w-5 lg:h-5 flex items-center justify-center">
            {Tool === 'MySQL' && <MySQL size='1.2em'/>}
            {Tool === 'C' && <Cpp size='1.2em'/>}
            {Tool === 'Cpp' && <Cpp size='1.2em'/>}
            {Tool === 'TailWind' && <TailwindCSS size='1.2em'/>}
            {Tool === 'NextJs' && <Nextjs size='1.2em'/>}
            {Tool === 'Node' && <Nodejs size='1.2em'/>}
            {Tool === 'AWS' && <AWS size='1.2em'/>}
            {Tool === 'Typescript' && <TypeScript size='1.2em'/>}
            {Tool === 'Qt' && <Qt size='1.2em'/>}
          </span>
        </div>
      ))}
    </div>

    <!-- Description -->
    <div class="flex-grow">
      <p class="text-xs sm:text-sm lg:text-base text-gray-300 leading-relaxed line-clamp-2 sm:line-clamp-3">
        {Description}
      </p>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-1 sm:pt-2 mt-auto">
      {PrevLink && (
        <a 
          href={PrevLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 sm:flex-initial min-w-0 py-1.5 sm:py-2 px-2 sm:px-3 rounded-md border border-slate-300/50 text-slate-100/70 hover:text-slate-100 hover:border-slate-300 hover:bg-slate-700/30 transition-all duration-200 text-center text-xs sm:text-sm font-medium"
        >
          <span class="inline">Preview</span>
        </a>
      )}

      <a 
        href={GitLink}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center py-1.5 sm:py-2 px-2 sm:px-3 rounded-md border border-slate-300/50 text-slate-100/70 hover:text-slate-100 hover:border-slate-300 hover:bg-slate-700/30 transition-all duration-200 group/github"
      >
        <span class="w-3 h-3 sm:w-4 sm:h-4 transition-transform duration-200 group-hover/github:scale-110 flex items-center justify-center">
          <Github />
        </span>
        <span class="ml-1 sm:ml-2 hidden lg:inline text-xs font-medium">GitHub</span>
      </a>

      {FigmaLink && (
        <a 
          href={FigmaLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center py-1.5 sm:py-2 px-2 sm:px-3 rounded-md border border-slate-300/50 text-slate-100/70 hover:text-slate-100 hover:border-slate-300 hover:bg-slate-700/30 transition-all duration-200 group/figma"
        >
          <span class="w-3 h-3 sm:w-4 sm:h-4 transition-transform duration-200 group-hover/figma:scale-110 flex items-center justify-center">
            <Figma />
          </span>
          <span class="ml-1 sm:ml-2 hidden lg:inline text-xs font-medium">Design</span>
        </a>
      )}
    </div>
  </div>
</div>
