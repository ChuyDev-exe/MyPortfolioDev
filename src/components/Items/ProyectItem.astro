---
import { 
  Github,
  TailwindCSS, 
  AWS, 
  Nextjs, 
  AstroI, 
  Nodejs, 
  MySQL, 
  Cpp, 
  TypeScript, 
  Linux, 
  RaspberryPI, 
  Qt, 
  VisualStudioCode, 
  Docker, 
  Android, 
  Microsoft 
} from '../Tools/Icons';

interface Props {
  imgsource?: string;
  Name: string;
  Tools: string[];
  Description: string;
  PrevLink?: string;
  GitLink: string;
}

const { imgsource, Name, Tools, Description, PrevLink, GitLink } = Astro.props;
---

<div class="py-3">
  {imgsource && <img src={imgsource} class="" alt={`${Name} preview`} />}
  <div class="flex flex-col">
    <h1 class="text-xl text-[#51E4B8]">{Name}</h1>
    <div class="flex gap-2">
      {Tools.map((Tool) => (
        <span
          class="rounded-xl py-1 px-1 text-base text-slate-100 flex gap-2 items-center justify-center"
        >
          {Tool === 'MySQL' && <MySQL />}
          {Tool === 'C' && <Cpp/>}
          {Tool === 'Cpp' && <Cpp/>}
          {Tool === 'TailWind' && <TailwindCSS/>}
          {Tool === 'NextJs' && <Nextjs/>}
          {Tool === 'Node' && <Nodejs/>}
          {Tool === 'AWS' && <AWS/>}
          {Tool === 'Typescript' && <TypeScript/>}
          {Tool === 'Qt' && <Qt/>}



        </span>
      ))}
    </div>
    <p class="text-base text-neutral-400 ">{Description}</p>
    <div class="flex gap-4 mt-3">
      {PrevLink && (
        <a href={PrevLink}     class="py-1 px-3 rounded-full border border-cyan-800 text-cyan-800 hover:bg-cyan-800 hover:text-white transition-colors cursor-pointer">
          Preview
        </a>
      )}
      <a href={GitLink} class="py-1 px-3 rounded-xl border border-slate-300 text-slate-300 cursor-pointer flex flex-row gap-2 items-center justify-center">
        Github <Github/>
      </a>
    </div>
  </div>
</div>
