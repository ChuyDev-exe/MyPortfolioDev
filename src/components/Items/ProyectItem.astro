---
import { 
  Github,
  TailwindCSS, 
  AWS, 
  Nextjs, 
  AstroI, 
  Nodejs, 
  MySQL, 
  Cpp, 
  TypeScript, 
  Linux, 
  RaspberryPI, 
  Qt, 
  VisualStudioCode, 
  Docker, 
  Android, 
  Microsoft,
  LVGL,
Figma
} from '../Tools/Icons';

interface Props {
  imgsource?: string;
  Type: string;
  Name: string;
  Tools: string[];
  Description: string;
  PrevLink?: string;
  GitLink: string;
  FigmaLink?: string;
}

const { imgsource, Name, Tools, Description, PrevLink, GitLink,Type,FigmaLink } = Astro.props;
---

<div class="py-3 bg-[#050d15]">
  {imgsource && <img src={imgsource} class="" alt={`${Name} preview`} />}
  <div class="flex flex-col gap-2">
    <h1 class="text-xl text-[#51E4B8] uppercase">{Name}</h1>
    <h1 class="text-sm text-[#f4faf8]">{Type}</h1>
    <div class="flex gap-2">
      {Tools.map((Tool) => (
        <span
          class="rounded-xl py-1 px-1 text-base text-slate-100 flex gap-2 items-center justify-center"
        >
          {Tool === 'MySQL' && <MySQL size='1.6em'/>}
          {Tool === 'C' && <Cpp  size='1.6em'/>}
          {Tool === 'Cpp' && <Cpp  size='1.6em'/>}
          {Tool === 'TailWind' && <TailwindCSS  size='1.6em'/>}
          {Tool === 'NextJs' && <Nextjs  size='1.6em'/>}
          {Tool === 'Node' && <Nodejs  size='1.6em'/>}
          {Tool === 'AWS' && <AWS  size='1.6em'/>}
          {Tool === 'Typescript' && <TypeScript size='1.6em' />}
          {Tool === 'Qt' && <Qt size='1.6em' />}



        </span>
      ))}
    </div>
    <p class="text-base text-neutral-400 ">{Description}</p>
    <div class="flex gap-2 mt-3">
      {PrevLink && (
        <a href={PrevLink}     class="py-1 px-3 rounded-md border border-slate-300/50 text-slate-100/50 hover:text-slate-100 hover:border-slate-300 transition-colors cursor-pointer">
          Preview
        </a>
      )}

      <a href={GitLink} class="py-2 px-2 rounded-md border border-slate-300/50 text-slate-100/50 hover:text-slate-100 hover:border-slate-300  cursor-pointer flex flex-row gap-2 items-center justify-center">
        <Github />
      </a>
      {FigmaLink && (
        <a href={FigmaLink} class="py-1 px-2 flex items-center justify-center rounded-md border border-slate-300/50 text-slate-100/50 hover:text-slate-100 hover:border-slate-300 transition-colors cursor-pointer">
          <Figma />
        </a>
      )}
    </div>
  </div>
</div>
