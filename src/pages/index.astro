<script>
window.addEventListener("scroll", () => {
  const nav = document.getElementById("navbar");

  if (nav) {
    if (window.scrollY > 90) {
      nav.classList.add(
        "border",
        "rounded-full",
        "border-white",
        "mt-10",
        "sticky",
        "top-10",
        "py-2",
        "px-10",
		"backdrop-blur-sm",
        "w-auto"
      );
    } else {
      nav.classList.remove(
        "border",
		"backdrop-blur-sm",
        "rounded-full",
        "border-white",
        "sticky",
        "top-10",
        "py-2",
        "px-10",
        "w-auto"
      );
    }
  }
});
</script>